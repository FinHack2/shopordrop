<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShopOrDropApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShopOrDropApp"
    xmlns:views="clr-namespace:ShopOrDropApp.Views">
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="MainPage"/>
    <ShellContent
        Title="Add an item"
        ContentTemplate="{DataTemplate views:PurchaseItemPage}"/>
    <ShellContent 
        Title="Purchase List" 
        ContentTemplate="{DataTemplate views:PurchaseListPage}" />
</Shell>
