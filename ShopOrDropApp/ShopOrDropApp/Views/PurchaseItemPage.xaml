<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="ShopOrDropApp.Views.PurchaseItemPage" 
			 Title="Purchase">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="Margin"
                    Value="0,10,0,10" />
            <Setter Property="FontAttributes"
                    Value="Bold" />
            <Setter Property="FontSize"
                    Value="20" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="0,5,0,5" />
        </Style>
    </ContentPage.Resources>
	<VerticalStackLayout Margin="20">
        <Label Text="ItemName" />
		<Entry Text="{Binding Path=PurchaseItem.ItemName}" 
               Placeholder="Enter item" />
        <Label Text="Category" />
        <Entry Text="{Binding Path=PurchaseItem.Category}"
               Placeholder="Enter notes" />
        <Label Text="OnlinePuchase" />
        <Switch IsToggled="{Binding Path=PurchaseItem.OnlinePuchase}" />
		<Button Text="Save" 
                Clicked="OnSaveButtonClicked" />
		<!--<Button Text="Delete"
                Clicked="OnDeleteButtonClicked" />-->
		<Button Text="Cancel" 
                Clicked="OnCancelButtonClicked" />
	</VerticalStackLayout>
</ContentPage>
